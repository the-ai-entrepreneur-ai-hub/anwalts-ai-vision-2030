# AnwaltsAI Production Environment - portal-anwalts.ai
NODE_ENV=production
DEBUG=false
PORT=8000
FRONTEND_PORT=3000
DOMAIN=portal-anwalts.ai
APP_URL=https://portal-anwalts.ai

# Database
DATABASE_URL=sqlite:///opt/anwalts-ai/data/anwalts_ai.db
DATABASE_POOL_SIZE=20

# AI Service
AI_MODEL_PATH=/opt/anwalts-ai/data/massive_legal_data
AI_MODEL_TYPE=german_legal
MAX_TOKENS=2048
DATASET_SIZE=9997

# Security
SECRET_KEY=anwalts-ai-secure-key-2025-legal-system
JWT_SECRET=portal-anwalts-ai-jwt-secret-key-german-legal
CORS_ORIGINS=https://portal-anwalts.ai,https://www.portal-anwalts.ai,http://portal-anwalts.ai,http://www.portal-anwalts.ai

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Legal Dataset
DATASET_PATH=/opt/anwalts-ai/data/massive_legal_data
DATASET_FORMAT=jsonl
TOTAL_EXAMPLES=9997
TRAIN_EXAMPLES=7997
VALIDATION_EXAMPLES=999
TEST_EXAMPLES=1001
