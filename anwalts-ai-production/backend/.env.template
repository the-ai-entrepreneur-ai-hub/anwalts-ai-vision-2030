# AnwaltsAI Backend Configuration
# Copy this to .env and fill in your actual values

# Together API Configuration
TOGETHER_API_KEY=your_together_api_key_here

# Default AI Model (DeepSeek-V3 is recommended for German legal work)
DEFAULT_AI_MODEL=deepseek-ai/DeepSeek-V3

# Alternative models you can use:
# DEFAULT_AI_MODEL=meta-llama/Llama-3.1-70B-Instruct-Turbo
# DEFAULT_AI_MODEL=meta-llama/Llama-3.1-8B-Instruct-Turbo
# DEFAULT_AI_MODEL=mixtral-8x7b-instruct-v0.1

# Database Configuration (SQLite for simplicity)
DATABASE_URL=sqlite:///./anwalts_ai.db
DB_TYPE=sqlite

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=5001
DEBUG=False

# CORS Configuration (for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]